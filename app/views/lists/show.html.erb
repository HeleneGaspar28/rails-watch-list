<h1><%= @list.name %></h1>

<h2>Bookmarked Movies</h2>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%=bookmark.movie.title %> - <%= bookmark.comment %>
      <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "Back to lists", lists_path, class: "btn btn primary" %>

<%= link_to "add bookmark", new_list_bookmark_path(@list), class: "btn btn primary" %>
