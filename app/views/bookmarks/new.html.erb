<h1> Create new bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :movie_id, collection: Movie.all, label_method: :title, value_method: :id, prompt: "select a movie"  %>
    <%= f.input :comment %>
    <%= f.button :submit, "add bookmark", class: "btn btn-primary" %>
  <% end %>

<%= link_to "Back to Lists", lists_path, class: "btn btn-secondary" %>
